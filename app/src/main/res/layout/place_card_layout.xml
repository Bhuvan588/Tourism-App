<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/place_image"
        android:layout_width="83dp"
        android:layout_height="127dp"
        android:layout_marginTop="-10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/temple" />

    <TextView
        android:id="@+id/place_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_toEndOf="@+id/place_image"
        android:text="Place Name 1"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/place_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/place_name"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/place_image"
        android:text="Rated 4.5 stars"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/place_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/place_name"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/place_rating"
        android:text="Open till 8"
        android:textSize="14sp" />

    <Button
        android:id="@+id/place_details_button"
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/place_rating"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/place_image"
        android:backgroundTint="@color/primary_orange"
        android:padding="10dp"
        android:text="SEE DETAILS"
        android:textSize="12sp" />

</RelativeLayout>